{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with Makefile",
            "command": "/usr/bin/make",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "close": true // set to true if the command fails and you want to see output.
            },
            "args": [
                "-j",
                "-C",
                "${workspaceFolder}/build",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build Nasm"
            ]
        },
        {
            "label": "Build Nasm",
            "type": "shell",
            "command": "bash ${workspaceFolder}/scripts/compile_asm_into_build_dir.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "close": true
            },
        }
    ],
    "version": "2.0.0"
}
